@model Sondage.Models.QuestionEtChoix

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Sond-ageDePierre </title>
    <link rel="stylesheet" href="/Content/style.css" />
</head>

<body>
    <!--Corps de la page -->
    <ul>
        <li><a href="/Sondage/Home">Accueil</a></li>
        <li><a href="/Sondage/Creation">Créer un sondage</a></li>
        <li><a href="/Sondage/SondagesPopulaires">Sondage populaires</a></li>
        <li><a href="/Sondage/SondagesRecents">Sondage récents</a></li>
        <li><a class="active" href="/Sondage/Vote?id=@Model.Id">Sondage</a></li>
        <li style="float:right"><a href="/Sondage/Contact">Contact</a></li>

    </ul>

    <div id="conteneur">
        <div id="texte">           
            @{ 
                int i = 0;
                if(Model.TypeChoix)
                {
                    <form method="post" action="VoterM">
                    <input type="hidden" name="id" value=@Model.Id />
                    <h2> @Model.Question (Nombre de votants : @Model.NbVotants) </h2>
                    @{
                        foreach (var choix in Model.ListeChoix)
                        {
                            <input type="checkbox" name="valeurs" value=@Model.IdChoix[i++] /> @choix
                            <br />
                            <br />
                        }
                        <br />
                        <button> Voter </button>
                    }
                    </form>
                        }
                else
                {
                            <form method="post" action="Voter">
                            <input type="hidden" name="id" value=@Model.Id />
                            <h2> @Model.Question (Nombre de votants : @Model.NbVotants)    </h2>
                                @{
                        foreach (var choix in Model.ListeChoix)
                        {
                                        <input type="radio" name=vote value=@Model.IdChoix[i] /> @choix
                                        i++;
                                        <br />
                                        <br />
                                    }
                                    <br />
                                    <button> Voter </button>
                                }
                            </form>
                        }
            }
        </div>
    </div>


    <img src="/Content/agedepierre.png" id="imgenbas" />

</body>
</html>