@model Sondage.Models.QuestionEtChoix

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Sond-ageDePierre </title>
    <link rel="stylesheet" href="/Content/style.css" />
</head>

<body>
    <!--Corps de la page -->
    <ul>
        <li><a href="Home">Créer un sondage</a></li>
        <li><a href="SondagesPopulaires">Sondage populaires</a></li>
        <li><a class="active" href="Vote">Sondage</a></li>
        <li style="float:right"><a href="Contact">Contact</a></li>

    </ul>

    <div id="conteneur">
        <div id="texte">
            <form method="POST" action="Voter">
                <input type="hidden" name="id" value=@Model._id />
                <h2> @Model._Question </h2>
                @{
                    foreach (var choix in Model._ListeChoix)
                    {
                        if (Model._TypeChoix)
                        {
                            <input type="checkbox" name="vote" value="@choix" /> @choix
                            <br />
                        }
                        else
                        {
                            <input type="radio" name="vote" value=@choix /> @choix
                            <br />
                        }
                    }
                }
                <br />
                <button> Voter </button>
            </form>
        </div>
    </div>


    <img src="/Content/agedepierre.png" id="imgenbas" />

</body>
</html>