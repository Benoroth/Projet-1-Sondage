@model Sondage.Models.QuestionEtChoix

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Sond-ageDePierre </title>
    <link rel="stylesheet" href="/Content/style.css" />
</head>

<body>
    <!--Corps de la page -->
    <ul>
        <li><a href="Home">Créer un sondage</a></li>
        <li><a href="SondagesRecents">Sondage récents</a></li>
        <li><a href="SondagesPopulaires">Sondage populaires</a></li>
        <li><a href="BoiteaIdees">Boîte à idées</a></li>
        <li><a class="active" href="Vote">Sondage</a></li>
        <li style="float:right"><a href="Contact">Contact</a></li>

    </ul>

    <div id="conteneur">
        <div id="texte">
            <form method="POST" action="Voter">
                <h2> @Model._Question </h2>
                @{
                    int i = 1;
                    foreach (var choix in Model._ListeChoix)
                    {
                        string value = "choix";
                        value = value + i;                   
                        <input type="radio" name="vote" value=@value> @choix
                        <br />
                        i ++;
                        }
                    }                               
                <br />
                <button> Voter </button>
            </form>
        </div>
    </div>


    <img src="/Content/agedepierre.png" id="imgenbas" />

</body>
</html>